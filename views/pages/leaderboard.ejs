<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title }) %>
<body>
  <%- include('../partials/nav') %>

  <main>
    <div class="card">
      <div class="card-header">
        <h1 class="card-title">Top Players</h1>
        <p class="card-subtitle">
          The top 10 players ranked by their best quiz score.
        </p>
      </div>

      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Rank</th>
              <th>Username</th>
              <th>Best Score</th>
              <th>Games Played</th>
            </tr>
          </thead>
          <tbody id="leaderboardBody">
            <tr><td colspan="4">Loading leaderboard...</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <script src="/js/leaderboard.js"></script>
</body>
</html>
